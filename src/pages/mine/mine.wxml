<view class="container">
  <view class="header-bg pt-12 pb-6 px-6">
    <view class="flex items-center mt-12">
      <!-- 1. 头像：如果 userInfo.avatar 不存在，使用默认头像 -->
      <image class="w-20 h-20 rounded-full border-2 border-white" src="{{userInfo.avatar || 'http://braha.oss-cn-beijing.aliyuncs.com/app_info/images/mine/avatar.png'}}" bind:tap="logincheck"></image>

      <!-- 2. 信息展示区 -->
      <!-- 如果 userInfo 对象还不存在 (正在加载或加载失败) -->
      <view wx:if="{{!userInfo}}" class="ml-4">
        <view class="text-xl font-bold">BRAHA</view>
        <view class="text-sm text-gray-700 mt-1">加载中...</view>
      </view>

      <!-- 如果 userInfo 对象存在 -->
      <view wx:else class="flex flex-1 items-center justify-between ml-4" bind:tap="set_user">
        <view>
          <!-- 昵称：如果 userInfo.nickName 不存在，显示 BRAHA -->
          <view class="text-xl font-bold">{{userInfo.nickName || 'BRAHA'}}</view>
          <!-- ID: 直接显示 userInfo.ID -->
          <view class="text-sm text-gray-700 mt-1">ID: {{userInfo.ID}}</view>
        </view>
        <image src="../../assets/images/edit_icon.png" class="w-6 h-6"></image>
      </view>

    </view>
  </view>

